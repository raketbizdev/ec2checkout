<section class="my-5 py-5">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-8">
        <div class="card mx-auto" style="max-width: 500px;">
          <div class="card-header text-center">
            <div class="app_logo position-fixed top-center">
              <%= link_to root_path do %>
                <%= image_tag url_for("ec2Checkout.png"), alt: app_name, class: "rounded-circle", width: "100px", height: "100px" %>
              <% end %>
            </div>
            <div class="mb-0">
              <h5 class="card-title mt-5 mb-0"><%= app_name %></h5>
            </div>
          </div>
          <div class="card-body gx-1">
            <h5 class="card-title">Login</h5>
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <% if flash[:alert] %>
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                  <%= flash[:alert] %>
                  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
              <% end %>
              <div class="mb-3">
                <%= f.label :email, class: "form-label" %>
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "email" %>
              </div>
              <div class="mb-3">
                <%= f.label :password, class: "form-label" %>
                <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "password" %>
              </div>
              <% if devise_mapping.rememberable? %>
                <div class="mb-3 form-check p-0">
                  <%= f.check_box :remember_me %>
                  <%= f.label :remember_me, class: "form-check-label" %>
                </div>
              <% end %>
              <div class="actions">
                <%= f.submit "Log in", class: "btn btn-primary w-100" %>
              </div>
            <% end %>
            <div class="mt-5">
              <%= render "devise/shared/links" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
