<section class="mt-5">
  <div class="container">
    <div class="card">
      <div class="card-body">
        <% status_code = request.path_info[1..-1].to_i %>
        <% case status_code %>
        <% when 400 %>
        <h1>400 Bad Request</h1>
        <p>Your browser sent a request that this server could not understand.</p>
        <% when 401 %>
        <h1>401 Unauthorized</h1>
        <p>Your request requires authentication.</p>
        <% when 402 %>
        <h1>402 Payment Required</h1>
        <p>This request requires payment before it can be completed.</p>
        <% when 403 %>
        <h1>403 Forbidden</h1>
        <p>You don't have permission to access the requested resource.</p>
        <% when 404 %>
        <h1>404 Not Found</h1>
        <p>The page you are looking for does not exist or has been moved.</p>
        <% when 405 %>
        <h1>405 Method Not Allowed</h1>
        <p>The request method is not allowed for the requested resource.</p>
        <!-- Add similar blocks for the rest of the 4xx errors -->
        <% when 500 %>
        <h1>500 Internal Server Error</h1>
        <p>Something went wrong on our end. Please try again later or contact the site administrator.</p>
        <% when 501 %>
        <h1>501 Not Implemented</h1>
        <p>The server does not support the functionality required to fulfill the request.</p>
        <% when 502 %>
        <h1>502 Bad Gateway</h1>
        <p>The server received an invalid response from an upstream server it accessed to fulfill the request.</p>
        <!-- Add similar blocks for the rest of the 5xx errors -->
      <% else %>
        <h1>Oops! An error occurred</h1>
        <p>Something went wrong. Please try again later or contact the site administrator.</p>
      <% end %>
    </div>
  </div>
</section>
